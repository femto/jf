<script type="text/javascript" src="/javascripts/kindeditor-min.js"></script>
<%= semantic_form_for [:admin, @product] do |f| %>

     <%=f.inputs "Detail" do %>


        <li><%=f.label "Category"%><%=f.grouped_collection_select :category_id, ProductCategory.where(:parent_id=>nil), :children, :name, :id, :name, include_blank: true %>
          </li>
        <%=f.input :en_name%>
        <%=f.input :en_body, :id=>"ke_demo"%>
        <%=f.input :zh_cn_name%>
        <%=f.input :zh_cn_body %>
        <%=f.input :featured %>
        <%=f.input :is_new %>
        <%=f.input :position %>
        <%=f.input :image %>
       <%= f.input :en_whitepaper%>
       <%= f.input :zh_cn_whitepaper%>
     <%end%>



    <%= f.buttons %>
  <% end %>
<script>
KindEditor.ready(function(K) {
	K.create('#product_en_body', {
        uploadJson : '/kind_editor/upload',
		allowFileManager : true
	});
    K.create('#product_zh_cn_body', {
        uploadJson : '/kind_editor/upload',
		allowFileManager : true
	}
    );
});
</script>