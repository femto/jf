<script type="text/javascript" src="/javascripts/kindeditor-min.js"></script>
<%= semantic_form_for [:admin, @article] do |f| %>

     <%=f.inputs "Detail" do %>


        <%=f.input :category%>
        <%=f.input :en_name%>
        <%=f.input :en_body%>
        <%=f.input :zh_cn_name%>
        <%=f.input :zh_cn_body %>
        <%=f.input :position %>
        <%=f.input :image %>

     <%end%>



    <%= f.buttons %>
  <% end %>
<script>
KindEditor.ready(function(K) {
	K.create('#article_en_body', {
        uploadJson : '/kind_editor/upload',
		allowFileManager : true
	});
    K.create('#article_zh_cn_body', {
        uploadJson : '/kind_editor/upload',
		allowFileManager : true
	}
    );
});
</script>