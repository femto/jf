<div class="jianbian">
           <div class="container">
           <p class="y-bt blue-caption"><%= @product_category.name %></p>
           </div>
           </div>


   		<div class="center-product">
        <div class="container">
        <!--产品目录开始-->
        <hr class=" space"/>
        <div class="span-18 productlist">

        	<div class="xia"><hr class="line-abt span-18"/></div>


        		<div class="span-18 speaker">
                    <% children = @product_category.children.limit(4);children.each_with_index do |sub_category,index| %>
                        <div class="span-4 <%= 'last' if index == children.size - 1%>">
                            <div class="tv">
                            <%= link_to (image_tag sub_category.image_url, :width=>"134",:height=>"135"), sub_category %>
                            <p class="lit"><%=link_to sub_category.name, sub_category %></p>
                            </div>
                        </div>


                   <% end %>


                    <p class="span-17 all"></p>
                </div>
                <div class="xia"><hr class="line-abt span-18 "/></div>

                <hr class="space"/>
    			<div class="span-15">
                	<p class="blue-caption">特色产品</p>
                </div>
                <div class="span-3 last">
                	<p class="jianbian-bt-quan"></p>
                </div>
                <% @products.where(:featured=>true).each do |product| %>
                    <div class="span-5 last">
                        <%=image_tag product.image,  :width=>"150",:height=>"143" if product.image?%>
                    </div>
                    <div class="span-13 last"> 
                              	<table>
                                  	<tr>
                                      	<td colspan="2" class="t-bold"><%= link_to product.name, product %></td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">系列类型：</td>
                                          <td><%= product.category.name %> </td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">外形尺寸：</td>
                                          <td><%= product.length %>×<%= product.width %>×<%= product.height %></td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">额定功率：</td>
                                          <td><%= product.rated_power %></td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">额定阻抗：</td>
                                          <td><%= product.rated_impedance%> </td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">FO：</td>
                                          <td><%= product.fo%></td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">灵敏度：</td>
                                          <td><%= product.response_rate%></td>
                                      </tr>
                                      <tr>
                                      	<td class="span-2 last t-bold">频响范围：</td>
                                          <td><%= product.frequency_response_range%></td>
                                      </tr>
                                  </table>
              					  <div class="span-10 all last">
                                  	<%= link_to "了解更多",product %>
                                  </div>
                                  <div class="span-3 all last"><a href="#">反馈信息</a>
                                  </div>
                              </div>
                              <hr class="space"/>

                    <hr class="space"/>
                <% end %>

                <hr/>
                <div class="right"><%= paginate @products.where(:featured=>true) %>
                </div>

          </div>

          <%= render "shared/feedback_and_search" %>
          <%= render "shared/buy" %>
        </div>
        </div>