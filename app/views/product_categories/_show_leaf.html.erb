<!--产品  start   here-->
           <div class="jianbian">
           <div class="container">
           <p class="mulu b t-bold size-14">产品目录</p>
           </div>
           </div> 
        
        
           <div class="container">
           <!--产品目录开始-->
           <div class="span-5 xian-ju last">
                <% ProductCategory.where(:parent_id=>nil).each do |category| %>
                    <hr class="lit-line"/>
                    <div class="three-bt"><%=link_to category.name, category %></div>

                <% end %>

                <hr class="lit-line"/>
           </div>
    		<!--产品开始-->
        		<div class="span-13 speaker last">
                <p class="size-14 g t-bold"><%= @product_category.name %></p>
                <% @products.each do |product| %>
                <div class="span-5 last">
                	<%=link_to image_tag((product.image? ?  product.image : "tese-1.png"),:width=>"150",:height=>"143"), product%>
                </div>
                <div class="span-7 last"> 
                	<p>
                    	<span class="t-bold">产品型号：</span><%= link_to product.name, product %>
                    </p>
                    <p>
                    	<span class="t-bold">产品简介：</span><%=raw truncate_html product.body, :length=>60 %>
					</p>
					<div class="span-4 all last">
                    	<%= link_to t(".know_more"), product %>
                    </div>
                    <div class="span-3 all last">
                      <% if user_signed_in? %>
                    	<%= link_to "download", download_product_path(product) if product.whitepaper?  %>
                      <% end %>
                    </div>
                </div>
                <hr class="space"/>
                <% end %>

                <hr/>
                <div class="r">
                	<p class="nav-ye">
                    	<%= paginate @products %>
                    </p>
                </div>
            
          </div>
        
          <%= render "shared/feedback_and_search" %>
          <%= render "shared/buy" %>
        </div>
        </div>
